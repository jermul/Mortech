<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.itineraries.any? %>
      <h3>Itineraries (<%= @user.itineraries.count %>)</h3>
      <ol class="itineraries">
        <%= render @itineraries %>
      </ol>
      <%= will_paginate @itineraries %>
    <% end %>
  </div>
</div>